<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/textReaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Книги читателя:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBooksList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Загрузка..."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textReaderName" />

    <EditText
        android:id="@+id/editTextBookIdToIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ID книги для выдачи"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/textBooksList" />

    <Button
        android:id="@+id/btnIssueBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Выдать книгу"
        app:layout_constraintTop_toBottomOf="@id/editTextBookIdToIssue" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Назад к списку читателей"
        app:layout_constraintTop_toBottomOf="@id/btnIssueBook" />

</androidx.constraintlayout.widget.ConstraintLayout>