<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#E8DAFF"> <!-- Сиреневый фон как у кнопок, но светлее -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок книги (теперь белый текст) -->
        <TextView
            android:id="@+id/textBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название книги"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
        android:layout_marginBottom="8dp" />

        <!-- Автор и ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Автор: Неизвестен"
                android:textSize="16sp"
                android:textColor="#5D4037"
            android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textBookId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: 000"
                android:textSize="14sp"
                android:textColor="#795548"
            android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Кнопка возврата -->
        <Button
            android:id="@+id/btnReturnBook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="↩️ Вернуть эту книгу"
            android:textSize="14sp"
            android:backgroundTint="#9C27B0"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>